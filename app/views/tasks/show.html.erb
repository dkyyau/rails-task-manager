<div class="container text-center">
  <div class="d-flex justify-content-center">
    <div class="card">
      <div class="card-body">
        <h2><%= @task.title %></h2>
        <p><%= @task.details %></p>
        <% if @task.completed %>
          <p><i class="far fa-check-square"></i> This task has been completed</p>
        <% else %>
          <p><i class="far fa-square"></i> This task has not been completed yet</p>
        <% end %>
      </div>
    </div>
  </div>

    <%= link_to task_edit_path, class: "btn btn-outline-secondary" do %>
      <i class="fas fa-pencil-alt"></i>
      <span>Edit this task</span>
    <% end %>
    <%= link_to "Back to list", tasks_path %>
</div>